<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :test_id, class: "control-label" %>
    <%= number_input f, :test_id, class: "form-control" %>
    <%= error_tag f, :test_id %>
  </div>

  <div class="form-group">
    <%= label f, :evaluation, class: "control-label" %>
    <%= number_input f, :evaluation, step: "any", class: "form-control" %>
    <%= error_tag f, :evaluation %>
  </div>

  <div class="form-group">
    <%= label f, :mark, class: "control-label" %>
    <%= text_input f, :mark, class: "form-control" %>
    <%= error_tag f, :mark %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
